{
    "window.zoomLevel": 0.5,
    "workbench.colorTheme": "Min Dark",
    "workbench.iconTheme": "symbols",
    "workbench.editor.labelFormat": "short",
    "workbench.startupEditor": "welcomePage",
    // "workbench.activityBar.location": "hidden",
    "symbols.hidesExplorerArrows": false,
    "editor.fontFamily": "JetBrainsMono, Hack Nerd Font",
    "editor.fontSize": 13,
    "editor.fontLigatures": true,
    "editor.lineHeight": 1.5,
    // "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "gutter",
    "editor.rulers": [80, 120],
    "editor.scrollbar.vertical": "auto",
    "editor.scrollbar.horizontal": "hidden",
    // "editor.semanticHighlighting.enabled": false,
    "explorer.compactFolders": false,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "package.json": ".eslint*, prettier*, tsconfig*, vite*, bun.lock*, package-lock*, pnpm-lock*",
        "tailwind.config*": "tailwind.config*, postcss.config*",
        ".env.local": ".env*",
        ".env": ".env*",
        "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
        "*.dart": "${capture}.g.dart"
    },
    "terminal.integrated.fontFamily":  "JetBrainsMono, Hack Nerd Font",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1.2,
    "powermode.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.env.windows": {},  
}